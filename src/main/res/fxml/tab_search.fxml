<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.jdtk0x5d.eve.jet.fx.controller.impl.SearchTabController">
   <top>
       <VBox BorderPane.alignment="CENTER">
           <HBox alignment="CENTER_LEFT" spacing="5.0">
               <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
               </padding>
               <Label text="ISK:"/>
               <TextField fx:id="iskField"/>
               <Label text="%tabs.search.label.cargo"/>
               <TextField fx:id="cargoField"/>
               <Button fx:id="searchButton" mnemonicParsing="false" text="%tabs.search.button.search"/>
           </HBox>
           <TitledPane animated="false" expanded="false" text="%tabs.search.panel.advanced.header">
               <HBox alignment="CENTER_LEFT" spacing="5.0">
                   <padding>
                       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                   </padding>
                   <Label text="Route option:"/>
                   <ChoiceBox prefWidth="150.0"/>
               </HBox>
           </TitledPane>
       </VBox>
   </top>
   <center>
      <TableView fx:id="searchTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="itemColumn" prefWidth="75.0" text="%tabs.search.table.column.item" />
            <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="%tabs.search.table.column.quantity" />
            <TableColumn fx:id="sellingColumn" prefWidth="75.0" text="%tabs.search.table.column.selling" />
            <TableColumn fx:id="buyingColumn" prefWidth="75.0" text="%tabs.search.table.column.buying" />
            <TableColumn fx:id="jumpsColumn" prefWidth="75.0" text="%tabs.search.table.column.jumps" />
            <TableColumn fx:id="profitColumn" prefWidth="75.0" text="%tabs.search.table.column.profit" />
            <TableColumn fx:id="perJumpColumn" prefWidth="75.0" text="%tabs.search.table.column.perjump" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
